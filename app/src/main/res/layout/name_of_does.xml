<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/bgitemdoes"
    >
    <LinearLayout

        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/titledoes"
            android:fontFamily="@font/berlin_sans_fb_regular"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"

            android:textSize="20sp"
            android:textColor="#590255"

            android:text="Buy milk okay?"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView

                android:fontFamily="@font/berlin_sans_fb_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:text="Description:"
                ></TextView>
            <TextView
                android:id="@+id/datedoes"
                android:fontFamily="@font/berlin_sans_fb_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:text="Day after tomorrow"
                ></TextView>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"


        >
        <TextView
            android:id="@+id/locationdoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berlin_sans_fb_regular"


            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:text="Location"

            android:textSize="20sp"
            android:textColor="#590255"

            ></TextView>
