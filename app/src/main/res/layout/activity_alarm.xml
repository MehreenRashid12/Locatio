<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#feeffd"
    tools:context=".alarm">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/textViewTop"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/titlePageID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ring Ring!!"
                    android:textSize="28sp"
                    android:textColor="#FFF"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/berlin_sans_fb_regular"

                    ></TextView>

                <TextView
                    android:id="@+id/subtitlePageID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wake Up!!"
                    android:textSize="20sp"
                    android:textColor="#7d1378"

                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/berlin_sans_fb_regular"
                    ></TextView>

            </LinearLayout>
            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/btnAddNew"
                android:textSize="38sp"
                android:textColor="#590255"
                android:text="+"
                android:textAlignment="center"
                android:background="@drawable/button_circular"
                ></Button>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:backgroundTint="#feeffd"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            ></View>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ourAlarms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:fontFamily="@font/berlin_sans_fb_regular"
        android:id="@+id/endPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No more alarms"
        android:gravity="center"
        android:textSize="20sp"
        ></TextView>


</LinearLayout>